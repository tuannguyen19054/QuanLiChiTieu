<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="16dp"

    >

    <!-- Từ ngày -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boder"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/edtStartDate"
            android:hint="Từ ngày (yyyy-MM-dd)"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:focusable="false"
            android:clickable="true" />

        <ImageView
            android:id="@+id/imgStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lich"
            android:contentDescription="Chọn ngày bắt đầu"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Đến ngày -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boder"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/edtEndDate"
            android:hint="Đến ngày (yyyy-MM-dd)"
            android:layout_width="0dp"
            android:background="@null"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            android:clickable="true" />

        <ImageView
            android:id="@+id/imgEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lich"
            android:contentDescription="Chọn ngày kết thúc"
            android:padding="8dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSearch"
        android:text="Search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textViewcount"
        android:text="Số Lượng: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/listViewKhoanThu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="16dp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/textViewTongTien"
        android:text="Tổng tiền: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
